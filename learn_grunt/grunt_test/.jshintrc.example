{
    "predef": [
        "module",
        "require",
        "exports",
        "$",
        "console"
    ],//告诉JSHint全局变量命名

    "maxerr": 50,//设置JSHint最大警告数。默认50
    
    "globalstrict": true,//"global" - 全局层面的严格模式"use strict"; "implied" - 文件里面使用"use strict"; false - 禁止使用严格模式; true - 函数上面必须使用一个"use strict";
    
    "sub": true,//可以使用.代替[].例如:person['name'] vs.person.name.
    
    "supernew": false,//检查怪异结构 new function () { ... }和 new Object;
    
    "freeze": true,//禁止重写原生对象的原型列如 Array, Date等等。
    
    "indent": 4,//设置代码缩进长度，下个版本删除
    
    "white": true,//如果为true，JSHint会依据严格的空白规范检查你的代码。
    
    "curly": false,//循环或者条件语句必须使用花括号包围.
    
    "camelcase": true,//此选项可以强制所有变量名称为使用驼峰风格或UPPER_CASE用下划线。下个版本删除
    
    "latedef": false,//禁止定义之前使用变量。这个选项设置为“nofunc”将允许函数声明被忽略。
    
    "eqnull": true,//禁止 == null比较。通常这样的比较有用,当你想检查一个变量是否null或 undefined
    
    "newcap": true,//要求所有构造器使用new F()形式。
    
    "noarg": true,//禁止使用这个选项 arguments.caller和 arguments.callee。这两个 .caller和.callee将会被弃用。事实上,ECMAScript 5 严格模式禁止使用arguments.callee

    "quotmark": "single",//这个选项执行代码中使用引号的一致性。它接受三个值:true--代码字符串禁止单引号双引号混用,"single"--只允许单引号"double"--只允许双引号,下一个主要版本删除。

    "undef": true,//变量未定义
    
    "unused":true,//变量定义未使用
    
    "forin": false,//这个选项要求所有 for in循环过滤对象的item。
    
    "onevar": false,//JSHint期望函数只被var的形式声明一遍
    
    "maxdepth": 5,//设置代码最大嵌套深度
    
    "maxparams":5,//设置每个函数的形参最大数量
    
    "asi": true,//禁止缺少分号警告
    
    "boss": true,//禁止比较表达式的值没有达到预期警告
    
    "eqeqeq": false,//设置为true,禁止使用这个选项 ==和 !=，强制使用 ===和 !==。
    
    "debug": true,//忽略 debugger
    
    "evil": false,//禁止使用eval
    
    "lastsemic": false,//检查一行代码最后声明后面的分号是否遗漏
    
    "laxcomma": true,//检查逗号在代码行最前面的编程风格
    
    "loopfunc": true,//禁止内部循环
    
    "multistr": true,//抑制警告多行字符串,下个版本删除
    
    "notypeof": true,//检查无效 typeof操作符的值
    
    "validthis": true,//在非构造器函数中使用 this
    
    "browser": true,//暴露浏览器属性的全局变量，列如 window,document;
    
    "jquery": false//这个选项定义全局暴露的jQuery库。
}